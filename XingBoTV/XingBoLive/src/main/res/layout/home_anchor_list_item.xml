<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/nick_container"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@drawable/home_anchor_grid_item_bottom_bg"
        android:layout_alignParentTop="true"
        >
        <com.xingbobase.view.FrescoImageView
            android:id="@+id/header"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:paddingLeft="10dp"
            fresco:placeholderImageScaleType="centerCrop"
            fresco:placeholderImage="@drawable/replace_image_xx"
            fresco:actualImageScaleType="centerCrop"
            fresco:roundAsCircle="true"
            fresco:roundingBorderColor="#FFFFFF"
            fresco:roundingBorderWidth="2dp"
            />

        <TextView
            android:id="@+id/nick"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="@color/black_363636"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            android:gravity="center|left"
            android:text="昵称"
            android:layout_centerVertical="true"
            android:singleLine="true"
            android:layout_toRightOf="@+id/header"
            />
        <TextView
            android:id="@+id/online_count_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:drawableLeft="@mipmap/home_anchor_online_ic"
            android:drawablePadding="2dp"
            android:textColor="@color/black_787878"
            android:gravity="center|left"
            android:text="1"
            android:layout_centerVertical="true"
            android:singleLine="true"
            android:layout_marginRight="5dp"
            />
    </RelativeLayout>
    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/nick_container">
        <com.xingbobase.view.FrescoImageView
            android:id="@+id/anchor_pic"
            xmlns:fresco="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            fresco:actualImageScaleType="centerCrop"
            fresco:placeholderImageScaleType="centerCrop"
            fresco:placeholderImage="@drawable/replace_image_xx"
            fresco:roundAsCircle="false"
            fresco:roundedCornerRadius="2dp"
            fresco:roundBottomLeft="false"
            fresco:roundBottomRight="false"
            fresco:roundingBorderColor="#FFFFFF"
            />

        <ImageView
            android:id="@+id/live_state_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="centerInside"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_margin="5dp"
            android:src="@mipmap/live_state_on_icon"
            />
    </RelativeLayout>


</RelativeLayout>