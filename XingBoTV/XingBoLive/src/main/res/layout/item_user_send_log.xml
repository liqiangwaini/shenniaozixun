<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="@color/ceeeeee">
    <RelativeLayout
        android:id="@+id/user_send_log_box"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_below="@+id/divider"
        android:background="@color/white">
        <TextView
            android:layout_marginRight="5dp"
            android:layout_toLeftOf="@+id/send_log_consume"
            android:singleLine="true"
            android:id="@+id/send_log_title"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="10dp"
            android:text="消费标题消费标题消费标题消费标题消费标题消费标题消费标题消费标题消费标题"
            android:textColor="@color/c333333"
            android:textSize="15sp" />

        <TextView
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="5dp"
            android:id="@+id/send_log_ctime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:text="日期"
            android:textColor="@color/c999999"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/send_log_consume"
            android:layout_width="wrap_content"
            android:singleLine="true"
            android:maxWidth="120dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="12dp"
            android:text="消费180000星币"
            android:textColor="@color/c333333"
            android:textSize="15sp" />
    </RelativeLayout>
    <View
        android:id="@+id/divider1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/ceeeeee"
        />
</RelativeLayout>