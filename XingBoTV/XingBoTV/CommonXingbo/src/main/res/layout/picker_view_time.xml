<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:id="@+id/root"
    android:background="#4D000000"
    >
    <com.xingbobase.view.XingBoRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btnSubmit"
        >
        <include
            android:id="@+id/timepicker"
            layout="@layout/picker_view_timepicker" />
        <View
            android:layout_alignTop="@id/timepicker"
            android:layout_alignBottom="@id/timepicker"
            android:background="@drawable/picker_view_bg_above_timepicker"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />
    </com.xingbobase.view.XingBoRelativeLayout>
    <Button
        android:id="@+id/btnSubmit"
        android:background="#00FE719C"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:textSize="20sp"
        android:textColor="#FFFFFF"
        android:text="完成" />

</RelativeLayout>

