<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/common_top_bar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#FFFFFF"
        >
        <ImageButton
            android:id="@+id/common_top_bar_back_btn"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/xingbo_loading_spinner_0"
            android:layout_centerVertical="true"
            android:scaleType="centerInside"
            android:background="@null"
            android:paddingLeft="10dp"
            android:paddingRight="15dp"
            />
        <TextView
            android:id="@+id/common_top_bar_title"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:paddingRight="50dp"
            android:gravity="center"
            android:layout_toRightOf="@+id/common_top_bar_back_btn"
            android:singleLine="true"
            android:textSize="20sp"
            android:textColor="#FFFFFF"
            android:text="选择视频"
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/chooser_container"
        android:layout_below="@+id/common_top_bar"
        android:background="#EFEFEF"
        >

    </RelativeLayout>
</RelativeLayout>