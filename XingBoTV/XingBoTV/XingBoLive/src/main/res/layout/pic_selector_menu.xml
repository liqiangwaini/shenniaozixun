<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#b0000000"
    android:id="@+id/base_bottom_pop_menu"
    >
    <Button
        android:id="@+id/open_my_camera"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="拍照"
        android:textSize="17sp"
        android:background="#FFFFFF"
        android:layout_above="@+id/open_my_photo_piker"
        android:layout_marginBottom="0.1dp"
        android:textColor="#555555"
        />
    <Button
        android:id="@+id/open_my_photo_piker"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="相册"
        android:textSize="17sp"
        android:background="#FFFFFF"
        android:layout_above="@+id/pic_selector_menu_close"
        android:layout_marginBottom="0.1dp"
        android:textColor="#555555"
        />
    <Button
        android:id="@+id/pic_selector_menu_close"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="取消"
        android:textSize="17sp"
        android:background="#FFFFFF"
        android:layout_alignParentBottom="true"
        android:textColor="#555555"
        />
</RelativeLayout>