<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:id="@+id/content_box"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.xingbobase.view.FrescoImageView
            android:id="@+id/anchor_header"
            xmlns:fresco="http://schemas.android.com/apk/res-auto"
            android:layout_width="60dp"
            android:layout_height="60dp"
            fresco:actualImageScaleType="centerCrop"
            fresco:roundAsCircle="false"
            fresco:roundedCornerRadius="2dp"
            fresco:roundingBorderColor="#FFFFFF"
            android:layout_centerVertical="true"
            android:layout_margin="10dp"
            fresco:retryImageScaleType="centerCrop"
            fresco:placeholderImage="@drawable/replace_image_xx_100"
            />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/anchor_header"
            >
            <TextView
                android:id="@+id/anchor_nick"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/first_text_525252"
                android:textSize="14sp"
                android:gravity="center|left"
                android:layout_toLeftOf="@+id/state_box"
                android:layout_centerVertical="true"
                android:singleLine="true"
                />
            <RelativeLayout
                android:id="@+id/state_box"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                >
                <ImageView
                    android:id="@+id/live_state_on_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scaleType="centerInside"
                    android:src="@mipmap/live_state_on_icon"
                    android:layout_centerInParent="true"
                    />
                <TextView
                    android:id="@+id/live_state_off_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="未开播"
                    android:textSize="12sp"
                    android:textColor="@color/orange_FF582B"
                    android:drawableLeft="@mipmap/live_state_off_icon"
                    android:drawablePadding="2dp"
                    android:layout_centerInParent="true"
                    />
            </RelativeLayout>
        </RelativeLayout>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/list_divider_D2D2D2"
        android:layout_below="@+id/content_box"
        android:layout_marginLeft="10dp"
        />
</RelativeLayout>