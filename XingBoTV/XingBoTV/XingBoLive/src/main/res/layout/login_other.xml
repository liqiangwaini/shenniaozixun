<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:alpha="0.5"
        android:src="@drawable/welcome"
        android:id="@+id/login_other_bg_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        />

    <!--<ImageView-->
        <!--android:id="@+id/login_logo"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:scaleType="centerInside"-->
        <!--android:src="@mipmap/login_logo"-->
        <!--android:layout_centerHorizontal="true"-->
        <!--android:layout_marginTop="40dp"-->
        <!--android:layout_marginBottom="10dp"-->
        <!--/>-->
    <RelativeLayout
        android:id="@+id/login_other_choose_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
         android:layout_above="@+id/login_other_type_container"
        android:layout_marginBottom="25dp"
        android:layout_centerHorizontal="true"
        >
        <TextView
            android:id="@+id/login_other_choose_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:text="选择登录方式"
            android:layout_marginTop="160dp"
            />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/login_other_type_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/login_goto_local_container"
        android:layout_centerHorizontal="true"
        android:layout_marginRight="70dp"
        android:layout_marginLeft="70dp"
      android:layout_marginBottom="10dp"
        >
        <ImageButton
            android:id="@+id/login_weixin"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:scaleType="centerInside"
            android:src="@mipmap/login_weixin_icon"
            android:layout_below="@+id/other_login_label_container"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="10dp"
            android:background="@null"
            />
        <ImageButton
            android:id="@+id/login_qq"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:scaleType="centerInside"
            android:src="@mipmap/login_qq_icon"
            android:layout_below="@+id/other_login_label_container"
           android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:background="@null"
            />
        <ImageButton
            android:id="@+id/login_sina"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:scaleType="centerInside"
            android:src="@mipmap/login_sina_icon"
            android:layout_below="@+id/other_login_label_container"
            android:layout_alignParentRight="true"
            android:layout_marginTop="10dp"
            android:background="@null"
            />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/login_goto_local_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/login_allow_lisence_text"
        android:layout_centerHorizontal="true"
        android:layout_marginRight="40dp"
        android:layout_marginLeft="40dp"
        android:layout_marginBottom="120dp"
        >
        <TextView
            android:id="@+id/login_goto_local_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/second_text_AEAEAE"
            android:layout_alignParentRight="true"
            android:textSize="12sp"
            android:text="星播帐号登录"
            android:clickable="true"
            />
        <View
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:background="@drawable/one_key_login_line"
            android:layout_below="@+id/login_goto_local_text"
            android:layout_centerVertical="true"
            android:layout_marginLeft="205dp"
            />
    </RelativeLayout>

    <TextView
        android:id="@+id/login_allow_lisence_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/c999999"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:textSize="12sp"
        android:text="登录即代表您已同意《星播TV用户许可及服务协议》"
        android:layout_marginBottom="37dp"
        android:clickable="true"
        />
</RelativeLayout>