<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_below="@+id/horizontal_divide"
        android:orientation="horizontal"
        android:layout_height="50dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:text="星播贡献榜"/>
        <ImageButton
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/image_to_contribute"
            android:src="@mipmap/orange_right_btn_icon"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"/>
        <com.xingbobase.view.IFrescoImageView
            android:id="@+id/user_contribute_3"
            android:layout_toLeftOf="@id/image_to_contribute"
            android:layout_width="30dp"
            android:layout_height="30dp"
            fresco:actualImageScaleType="centerCrop"
            fresco:roundAsCircle="true"
            fresco:roundingBorderColor="@color/gray_border_E5E5E5"
            android:layout_marginRight="10dp"
            android:layout_centerVertical="true"
            fresco:roundingBorderWidth="1dp"/>
        <com.xingbobase.view.IFrescoImageView
            android:id="@+id/user_contribute_2"
            android:layout_toLeftOf="@id/user_contribute_3"
            android:layout_width="30dp"
            android:layout_height="30dp"
            fresco:actualImageScaleType="centerCrop"
            fresco:roundAsCircle="true"
            fresco:roundingBorderColor="@color/gray_border_E5E5E5"
            android:layout_marginRight="10dp"
            android:layout_centerVertical="true"
            fresco:roundingBorderWidth="1dp"/>
        <com.xingbobase.view.IFrescoImageView
            android:id="@+id/user_contribute_1"
            android:layout_toLeftOf="@id/user_contribute_2"
            android:layout_width="30dp"
            android:layout_height="30dp"
            fresco:actualImageScaleType="centerCrop"
            fresco:roundAsCircle="true"
            fresco:roundingBorderColor="@color/gray_border_E5E5E5"
            android:layout_marginRight="10dp"
            android:layout_centerVertical="true"
            fresco:roundingBorderWidth="1dp"/>
    </RelativeLayout>



</LinearLayout>