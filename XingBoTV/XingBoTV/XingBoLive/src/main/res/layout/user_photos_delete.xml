<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <!--<TextView
        android:visibility="invisible"
        android:layout_width="0dp"
        android:layout_height="44dp"
        android:layout_weight="1"
        android:gravity="center"
        android:text="我的相册"
        android:textColor="@color/black"
        android:textSize="17sp" />-->
    <TextView
        android:id="@+id/model_name"
        android:layout_width="match_parent"
        android:layout_height="28dp"
        android:layout_toRightOf="@+id/top_back_btn"
        android:gravity="center_horizontal|bottom"
        android:text="uptime"
        android:textColor="@color/black"
        android:textSize="17sp" />

    <TextView
        android:id="@+id/photo_delete_number"
        android:layout_width="wrap_content"
        android:layout_height="16dp"
        android:layout_below="@+id/model_name"
        android:layout_centerHorizontal="true"
        android:layout_toRightOf="@+id/top_back_btn"
        android:gravity="center"
        android:text="uptime"
        android:textColor="@color/black"
        android:textSize="12sp" />

    <ImageButton
        android:id="@+id/photo_delete_top_back_btn"
        android:layout_width="40dp"
        android:layout_height="44dp"
        android:background="@null"
        android:scaleType="centerInside"
        android:src="@mipmap/back" />

    <TextView
        android:id="@+id/photo_delete"
        android:layout_width="60dp"
        android:layout_height="44dp"
        android:layout_alignParentRight="true"
        android:layout_weight="1"
        android:gravity="center"
        android:text="删除"
        android:textColor="@color/c666666"
        android:textSize="15sp" />

    <android.support.v4.view.ViewPager
        android:id="@+id/photo_delete_viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="44dp" />

    <com.xingbobase.view.FrescoImageView
        android:id="@+id/photo_show"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="44dp"
        android:visibility="invisible"
        app:actualImageScaleType="centerInside"
        app:roundAsCircle="false" />
</RelativeLayout>