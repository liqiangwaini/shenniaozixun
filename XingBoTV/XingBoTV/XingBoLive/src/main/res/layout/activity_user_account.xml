<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cEEEEEE"
    tools:context="com.xingbo.live.ui.UserAccountAct">

    <RelativeLayout
        android:id="@+id/top_bar"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_alignParentTop="true"
        android:background="@color/cffffff">

        <ImageButton
            android:id="@+id/top_back_btn"
            android:layout_width="40dp"
            android:layout_height="50dp"
            android:layout_centerVertical="true"
            android:background="@null"
            android:paddingLeft="10dp"
            android:paddingRight="15dp"
            android:scaleType="centerInside"
            android:src="@mipmap/back" />

        <TextView
            android:id="@+id/model_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/top_back_btn"
            android:gravity="center"
            android:paddingRight="50dp"
            android:text="账号中心"
            android:textColor="@color/black"
            android:textSize="17sp" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/user_account_box"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:layout_below="@+id/top_bar"
        android:layout_marginTop="5dp"
        android:background="#FFFFFF">

        <RelativeLayout
            android:id="@+id/account_left_box"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            >
        <TextView
            android:id="@+id/account_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"

            android:paddingLeft="12dp"
            android:text="我的余额"
            android:textColor="@color/c333333"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/user_account_coin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/account_label"
            android:gravity="left|center"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:paddingLeft="12dp"
            android:text="0"
            android:textColor="@color/pink"
            android:textSize="17sp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/account_label"
            android:layout_toRightOf="@+id/user_account_coin"
            android:gravity="left|center"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:layout_alignBaseline="@+id/user_account_coin"
            android:text="星币"
            android:textColor="@color/c333333"
            android:textSize="12sp" />

        </RelativeLayout>
        <Button
            android:id="@+id/recharge_btn"
            android:layout_width="80dp"
            android:layout_height="33dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/user_recharge_selector"
            android:text="充值"
            android:layout_marginRight="10dp"
            android:textColor="@color/colorText3"
            android:textSize="15sp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/user_pay_log"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/user_account_box"
        android:layout_marginTop="15dp"
        android:background="@color/cffffff">

        <TextView
            android:id="@+id/user_account_tip"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="10dp"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:text="充值记录"
            android:textColor="@color/c333333"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/user_account_num"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_toLeftOf="@+id/open_btn_1"
            android:layout_toRightOf="@+id/user_account_tip"
            android:gravity="center|left"
            android:text=""
            android:textColor="#858585"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/open_btn_1"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:scaleType="centerInside"
            android:src="@mipmap/right_btn_icon" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/user_cost_record"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/user_pay_log"
        android:layout_marginTop="5dp"
        android:background="@color/cffffff">

        <TextView
            android:id="@+id/user_tip"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="10dp"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:text="消费记录"
            android:textColor="#424242"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/user_num"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_toLeftOf="@+id/open_btn_0"
            android:layout_toRightOf="@+id/user_tip"
            android:gravity="center|left"
            android:text=""
            android:textColor="#858585"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/open_btn_0"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:scaleType="centerInside"
            android:src="@mipmap/right_btn_icon" />
    </RelativeLayout>


</RelativeLayout>
