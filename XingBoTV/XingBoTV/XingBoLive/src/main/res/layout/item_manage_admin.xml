<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <com.xingbobase.view.FrescoImageView
            android:id="@+id/item_manage_admin_avator"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dp"
            android:scaleType="fitXY"
            app:placeholderImage="@mipmap/avatar_placeholder"
            app:roundAsCircle="true" />

        <TextView
            android:singleLine="true"
            android:layout_marginRight="40dp"
            android:id="@+id/item_manage_admin_nick"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/item_manage_admin_avator"
            android:text="别人都说我很帅"
            android:textColor="@color/c666666"
            android:textSize="12sp" />

        <TextView
            android:layout_alignLeft="@+id/item_manage_admin_nick"
            android:id="@+id/item_manage_admin_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_below="@+id/item_manage_admin_nick"
            android:layout_marginBottom="10dp"
            android:layout_toRightOf="@+id/item_manage_admin_avator"
            android:text="250250"
            android:textColor="@color/c666666"
            android:textSize="12sp" />

        <com.xingbobase.view.FrescoImageView
            android:id="@+id/item_manage_admin_sex"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/item_manage_admin_nick"
            android:src="@mipmap/female" />

        <ImageView
            android:id="@+id/item_manage_admin_delete"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="12dp"
            android:src="@mipmap/close_main_room" />
    </RelativeLayout>
</RelativeLayout>