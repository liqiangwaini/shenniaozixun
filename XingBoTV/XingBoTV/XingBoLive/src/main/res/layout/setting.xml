<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/base_bg"
    >
    <RelativeLayout
        android:id="@+id/top_bar"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@color/cffffff"
        android:layout_alignParentTop="true"
        >
        <ImageButton
            android:id="@+id/top_back_btn"
            android:layout_width="40dp"
            android:layout_height="50dp"
            android:scaleType="centerInside"
            android:src="@mipmap/back"
            android:paddingRight="15dp"
            android:paddingLeft="10dp"
            android:background="@null"
            android:layout_centerVertical="true"
            />
        <TextView
            android:id="@+id/model_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingRight="50dp"
            android:gravity="center"
            android:text="设置"
            android:textSize="17sp"
            android:textColor="@color/black"
            android:layout_toRightOf="@+id/top_back_btn"
            />
    </RelativeLayout>
    <ScrollView
        android:layout_below="@+id/top_bar"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/ceeeeee"
            >
            <TextView
                android:id="@+id/person_setting"
                android:layout_width="match_parent"
                android:layout_height="29dp"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="12dp"
                android:textColor="@color/c333333"
                android:textSize="15sp"
                android:text="个人账号"
                android:textStyle="bold"
                android:background="@color/ceeeeee"
                android:gravity="center|left"
                />
            <!--修改密码-->
            <RelativeLayout
                android:id="@+id/user_password_box"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="#FFFFFF"
                android:layout_below="@+id/person_setting"
                >
                <TextView
                    android:id="@+id/password_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/c333333"
                    android:textSize="15sp"
                    android:text="修改密码"
                    android:layout_centerVertical="true"
                    android:gravity="center|left"
                    android:layout_marginLeft="10dp"
                    />
                <TextView
                    android:id="@+id/password_"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_toRightOf="@+id/password_label"
                    android:layout_toLeftOf="@+id/open_btn_10"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="5dp"
                    android:textColor="@color/c333333"
                    android:textSize="15sp"
                    android:text=""
                    android:gravity="center|right"
                    />
                <ImageView
                    android:id="@+id/open_btn_10"
                    android:layout_width="36dp"
                    android:layout_height="50dp"
                    android:scaleType="centerInside"
                    android:src="@mipmap/right_btn_icon"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    />
            </RelativeLayout>
            <!--绑定手机-->
            <RelativeLayout
                android:id="@+id/user_phone_box"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="1dp"
                android:background="#FFFFFF"
                android:layout_below="@+id/user_password_box"
                >
                <TextView
                    android:id="@+id/phone_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/c333333"
                    android:textSize="15sp"
                    android:text="手机绑定"
                    android:layout_centerVertical="true"
                    android:gravity="center|left"
                    android:layout_marginLeft="10dp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/phone_band_num"
                    android:singleLine="true"
                    android:layout_toLeftOf="@+id/phone_band"
                    android:maxLength="11"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="5dp"
                    android:text=""/>
                <TextView
                    android:id="@+id/phone_band"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toLeftOf="@+id/open_btn_11"
                    android:textColor="@color/colorText5"
                    android:textSize="15sp"
                    android:text=""
                   android:layout_centerVertical="true"
                    />
                <ImageView
                    android:id="@+id/open_btn_11"
                    android:layout_width="36dp"
                    android:layout_height="50dp"
                    android:scaleType="centerInside"
                    android:src="@mipmap/right_btn_icon"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    />
            </RelativeLayout>
            <TextView
                android:id="@+id/phone_setting"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="10dp"
                android:textColor="@color/c333333"
                android:textSize="15sp"
                android:text="功能设置"
                android:textStyle="bold"
                android:layout_below="@id/user_phone_box"
                android:background="@color/ceeeeee"
                android:gravity="center|left"
                />
            <RelativeLayout
                android:id="@+id/sending_box"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="#FFFFFF"
                android:layout_marginTop="1dp"
                android:layout_below="@+id/phone_setting"
                >
                <TextView
                    android:id="@+id/sending_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/c333333"
                    android:textSize="15sp"
                    android:text="推送提醒"
                    android:layout_centerVertical="true"
                    android:gravity="center|left"
                    android:layout_marginLeft="10dp"
                    />

                <ImageView
                    android:id="@+id/open_btn_20"
                    android:layout_width="36dp"
                    android:layout_height="50dp"
                    android:scaleType="centerInside"
                    android:src="@mipmap/right_btn_icon"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/cache_setting"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="1dp"
                android:background="#FFFFFF"
                android:layout_below="@+id/sending_box"
                >
                <TextView
                    android:id="@+id/cache_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/c333333"
                    android:textSize="15sp"
                    android:text="清除缓存"
                    android:layout_centerVertical="true"
                    android:gravity="center|left"
                    android:layout_marginLeft="10dp"
                    />
                <TextView
                    android:id="@+id/cache_size"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="12dp"
                    android:textColor="@color/c999999"
                    android:textSize="15sp"
                    android:text="0.00M"
                    android:gravity="center|right"
                    />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/feedback_setting"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="#FFFFFF"
                android:layout_marginTop="1dp"
                android:layout_below="@+id/cache_setting"
                >
                <TextView
                    android:id="@+id/feedback_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/c333333"
                    android:textSize="15sp"
                    android:text="意见反馈"
                    android:layout_centerVertical="true"
                    android:gravity="center|left"
                    android:layout_marginLeft="10dp"
                    />

                <ImageView
                    android:id="@+id/open_btn_2"
                    android:layout_width="36dp"
                    android:layout_height="50dp"
                    android:scaleType="centerInside"
                    android:src="@mipmap/right_btn_icon"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/about_setting"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="#FFFFFF"
                android:layout_marginTop="1dp"
                android:layout_below="@+id/feedback_setting"
                >
                <TextView
                    android:id="@+id/about_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/c333333"
                    android:textSize="15sp"
                    android:text="关于星播"
                    android:layout_centerVertical="true"
                    android:gravity="center|left"
                    android:layout_marginLeft="10dp"
                    />

                <ImageView
                    android:id="@+id/open_btn_3"
                    android:layout_width="36dp"
                    android:layout_height="50dp"
                    android:scaleType="centerInside"
                    android:src="@mipmap/right_btn_icon"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/logout_setting"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="#FFFFFF"
                android:layout_marginTop="1dp"
                android:layout_below="@+id/about_setting"
                >
                <Button
                    android:id="@+id/login_out"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:textColor="@color/c333333"
                    android:background="#FFFFFF"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:text="退出登录"
                    android:layout_centerVertical="true"
                    android:gravity="center|left"
                    />
            </RelativeLayout>
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>