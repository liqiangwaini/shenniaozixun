<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    >
    <RelativeLayout
        android:id="@+id/list_item_box"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="15dp">

        <com.xingbobase.view.FrescoImageView
            android:id="@+id/user_header"
            android:layout_width="40dp"
            android:layout_height="40dp"
            fresco:actualImageScaleType="centerCrop"
            fresco:roundAsCircle="true"
            fresco:roundedCornerRadius="2dp"
            fresco:roundingBorderColor="#00FFFFFF"
            android:clickable="true"
            android:layout_marginRight="5dp"
            android:layout_centerVertical="true"
            fresco:retryImageScaleType="centerCrop"
            fresco:placeholderImage="@mipmap/avatar_placeholder"
            />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/user_header"
            android:layout_centerVertical="true"
            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/list_item_fcous"
                >
                <TextView
                    android:id="@+id/nick"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="昵称"
                    android:textColor="@color/first_text_525252"
                    android:textSize="14sp"
                    android:gravity="center|left"
                    />
                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:id="@+id/list_item_sex"
                    android:layout_marginLeft="5dp"
                    android:src="@mipmap/female"
                    android:layout_toRightOf="@id/nick"/>
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="15dp"
                    android:layout_marginLeft="5dp"
                    android:id="@+id/rich_icon"
                    android:layout_toRightOf="@id/list_item_sex"/>

                <TextView
                    android:id="@+id/list_item_personal_sign"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:layout_below="@+id/nick"
                    android:text="他很懒，什么都没有说..."
                    android:singleLine="true"
                    android:layout_alignLeft="@+id/nick"
                    />
            </RelativeLayout>
            <Button
                android:layout_width="75dp"
                android:layout_height="35dp"
                android:id="@+id/list_item_fcous"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:clickable="true"
                android:text="已关注"
                android:textColor="@color/black"
                android:textSize="15dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/round_button"/>
            <!--<TextView-->
                <!--android:id="@+id/room_linker_btn"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="35dp"-->
                <!--android:visibility="gone"-->
                <!--android:layout_marginRight="15dp"-->
                <!--android:paddingLeft="10dp"-->
                <!--android:drawableRight="@mipmap/orange_right_btn_icon"-->
                <!--android:drawablePadding="10dp"-->
                <!--android:text="直播中"-->
                <!--android:textSize="14sp"-->
                <!--android:textColor="@color/orange_FF582B"-->
                <!--android:layout_alignParentRight="true"-->
                <!--android:layout_centerVertical="true"-->
                <!--android:background="@null"-->
                <!--/>-->
        </RelativeLayout>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/list_divider_D2D2D2"
        android:layout_below="@+id/list_item_box"
        android:layout_marginLeft="15dp"/>
</RelativeLayout>