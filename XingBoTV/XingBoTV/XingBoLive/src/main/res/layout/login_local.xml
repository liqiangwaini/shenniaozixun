<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:alpha="0.5"
        android:src="@drawable/welcome"
        android:id="@+id/login_other_bg_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        />
    <RelativeLayout
        android:id="@+id/top_bar"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@null"
        android:layout_alignParentTop="true"
        >
        <ImageButton
            android:id="@+id/top_back_btn"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:scaleType="centerInside"
            android:src="@mipmap/user_portrait_back"
            android:paddingRight="15dp"
            android:paddingLeft="10dp"
            android:background="@null"
            android:layout_centerVertical="true"
            />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/login_input_container"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:scaleType="centerInside"
        android:layout_marginTop="200dp"
        >
        <com.xingbobase.view.widget.XingBoEditText
            android:id="@+id/account"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:singleLine="true"
            android:textSize="12sp"
            android:textColor="@color/cffffff"
            android:hint="星播号/手机号"
            android:textColorHint="#cccccc"
            android:background="@null"
            android:paddingLeft="10dp"
            />
        <View
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#ffD5D5D5"
            android:layout_below="@+id/account"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            />
        <com.xingbobase.view.widget.XingBoEditText
            android:id="@+id/password"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:singleLine="true"
            android:textSize="12sp"
            android:textColor="@color/cffffff"
            android:hint="密码"
            android:textColorHint="#cccccc"
            android:gravity="left|center"
            android:layout_below="@+id/divider"
            android:background="@null"
            android:paddingLeft="10dp"
            android:inputType="textPassword"
            />
        <View
            android:id="@+id/divider2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#ffD5D5D5"
            android:layout_below="@+id/password"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            />
    </RelativeLayout>
    <Button
        android:id="@+id/login"
        android:layout_width="300dp"
        android:layout_height="37dp"
        android:background="@drawable/login_and_register_bg"
        android:textColor="@color/c333333"
        android:layout_centerHorizontal="true"
        android:textSize="16sp"
        android:text="登录"
        android:layout_below="@+id/login_input_container"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        />
    <RelativeLayout
        android:id="@+id/forget_pwd_link_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/login"
        android:layout_centerHorizontal="true"

        >
        <TextView
            android:id="@+id/reset_pwd_link"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#cccccc"
            android:textSize="12sp"
            android:text="忘记密码"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="37dp"
            android:clickable="true"
            />
        <TextView
            android:id="@+id/register_btn"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:textColor="#cccccc"
            android:textSize="12sp"
            android:text="注册"
            android:clickable="true"
            android:gravity="right"
            android:layout_alignParentRight="true"
            android:layout_marginTop="10dp"
            android:layout_marginRight="37dp"
            />
    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/xingbo_lisence_text"
        android:layout_alignParentBottom="true"
        android:textColor="@color/c999999"
        android:layout_centerHorizontal="true"
        android:textSize="12sp"
        android:text="《星播TV用户许可及服务协议》"
        android:layout_marginBottom="37dp"
        />
</RelativeLayout>